@model Models.Framework.LopHoc

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<div class="modal-header bg-olive">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" style="font-size:25px; color:black">Chi tiết lớp học</h4>
</div>

<div class="modal-body form-horizontal">

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered">
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.TenLopHoc)</td>
                                <td>@Html.DisplayFor(model => model.TenLopHoc)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.GiaoVien.TenGiaoVien)</td>
                                <td>@Html.DisplayFor(model => model.GiaoVien.TenGiaoVien)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered">
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.TinhTrang)</td>
                                <td>@Html.DisplayFor(model => model.TinhTrang)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.KhoaHoc.TenKhoaHoc)</td>
                                <td>@String.Format("{0:0,0}", Model.KhoaHoc.TenKhoaHoc) VNĐ</td>
                            </tr>
                        </table>
                    </div>
                    <div class="clearfix text-right">
                        @Html.ActionLink("Về danh sách", "Index", null, new { @class = "btn bg-navy btn-lg btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


