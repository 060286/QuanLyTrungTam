@model Models.Framework.LopHoc

@{
    ViewBag.Title = "Edit";
    Layout = null;
}


<div class="modal-header bg-olive">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" style="font-size:25px; color:black">Cập nhật lớp học</h4>
</div>

<div class="modal-body form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaLopHoc)

            <div class="form-group">
                @Html.LabelFor(model => model.TenLopHoc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TenLopHoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLopHoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    <div class="checkbox">
                        @Html.RadioButtonFor(model => model.TinhTrang, true, new { required = "required" })Hoạt động
                        @Html.RadioButtonFor(model => model.TinhTrang, false) Ngừng hoạt động
                        @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaGiaoVien, "Chọn giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.MaGiaoVien, null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaGiaoVien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaKhoaHoc, "Chọn khóa học", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DropDownList("MaKhoaHoc", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaKhoaHoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1" style="margin-left:500px;margin-right: 20px">
                    <input type="submit" value="Cập nhật" class="btn btn-default" />
                </div>
                <div class="col-md-1">
                    <a href="~/LopHoc/Index" class="btn btn-danger">Quay lại</a>
                </div>
            </div>
        </div>
    }

    
</div>